<% layout('/layouts/boilerplate') -%>

<head>
    <link rel="stylesheet" href="css/contact.css">
</head>

<body>
    <!-- ---------------------------------- NAVBAR USING JAVASCRIPT ------------------------------------- -->

    <!-- ---------------------------------- HEADER SECTION EXCEPT HOME PAGE ------------------------------------- -->
    <div class="header-section-outer">
        <div class="header-section">
            <div class="header-section-content">
                <h1>Contact Us</h1>
                <!-- content -->
            </div>
        </div>
    </div>

    <!-- ---------------------------------- MAIN ------------------------------------- -->
    <main>
        <!-- ---------------------------------- CONTACT SECTION ------------------------------------- -->
        <section class="contact-container">

            <div class="contact-info">
                <h2>Get In Touch</h2>
                <p>I'm happy to help! If you're looking for contact information or details about Easy2Search, you can
                    reach out using the contact details below or the form on the right.
                </p>
                <div class="contact-details">
                    <div class="detail-item">
                        <span class="icon"><i class="fa-solid fa-location-dot"></i></span>
                        <p><strong>Office</strong><br>248007 Dbuu, Dehradun, Uttarakhand</p>
                    </div>
                    <div class="detail-item">
                        <span class="icon"><i class="fa-solid fa-phone"></i></span>
                        <p><strong>Mobile</strong><br>+91 0000000000</p>
                    </div>
                    <div class="detail-item">
                        <span class="icon"><i class="fa-regular fa-envelope"></i></span>
                        <p><strong>Email</strong><br>easy2search@gmail.com</p>
                    </div>
                </div>
            </div>
            <div class="contact-form">
                <form id="contact-form">
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="Your Name" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="subject" name="subject" placeholder="Subject" required>
                    </div>
                    <div class="form-group">
                        <textarea id="message" name="message" rows="5" placeholder="Message" required></textarea>
                    </div>
                    <button type="submit" class="contact-button">Send Message</button>
                    <p id="form-response"></p>
                </form>
            </div>
        </section>
        <!-- ---------------------------------- MAP SECTION ------------------------------------- -->

        <section id="map" class="map">
            <div class="container">
                <h2>Our Location</h2>
                <div class="map-wrapper">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d55066.46584063728!2d77.9190272!3d30.3891782!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3908d5a230a492ab%3A0x418250c6fd1c9159!2sDev%20Bhoomi%20Uttarakhand%20University%20%7C%20Best%20University%20in%20Dehradun%20Uttarakhand!5e0!3m2!1sen!2sin!4v1724667143660!5m2!1sen!2sin"
                        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </section>

    </main>

    <!-- ---------------------------------- FOOTER SECTION ------------------------------------- -->


    <script src="js/contact.js"></script>
</body>

</html>